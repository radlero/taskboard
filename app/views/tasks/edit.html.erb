<h1>Edit task</h1>

<%= form_with(model: @task, local: true) do |form| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@task.errors.count, "error") %> prohibited
        this task from being saved:
      </h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :task %><br>
    <%= form.text_field :task %>
  </p>

  <p>
    <%= form.label :time %><br>
    <%= form.select :time, ['08:00', '09:00', '10:00', '11:00', '12:00', '13:00', '14:00', '15:00', '16:00', '17:00']%>
  </p>

  <p>
    <%= form.label :station %><br>
    <%= form.select :station, ['station1', 'station2']%>
  </p>

  <p>
    <%= form.label :importance %><br>
    <%= form.select :importance, ['red', 'amber', 'green']%>
  </p>

  <p>
    <%= form.label :make %><br>
    <%= form.text_field :make %>
  </p>

  <p>
    <%= form.label :regnum %><br>
    <%= form.text_field :regnum %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', tasks_path %>
