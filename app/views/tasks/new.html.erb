
<h1>New Task</h1>
  <%= form_with scope: :task, url: tasks_path, local: true do |form| %>
    <p>
      <%= form.label :task %><br>
      <%= form.text_field :task %>
    </p>
    <p>
      <%= form.label :time %><br>
      <%= form.text_field :time %>
    </p>
    <p>
      <%= form.label :station%><br>
      <%= form.text_field :station %>
    </p>
    <p>
      <%= form.label :importance%><br>
      <%= form.text_field :importance %>
    </p>


    <p>
      <%= form.submit %>
    </p>
  <% end %>
<%= link_to 'Back', tasks_path %>
